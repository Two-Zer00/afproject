{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/public/test",
      "**/public/testFiles"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/emailRedirect",
        "destination": "/emailsHandler.html"
      },
      {
        "source": "/u",
        "destination": "/u.html"
      },
      {
        "source": "/upload",
        "destination": "/upload/index.html"
      },
      {
        "source": "/post",
        "destination": "/post.html"
      },
      {
        "source": "/login",
        "destination": "/login/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
